<Application x:Class="_12306BySelfService.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_12306BySelfService"
             xmlns:common="clr-namespace:_12306BySelfService.Common"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Set default skin -->
                <ResourceDictionary Source="/Resources/Themes/Skins/BureauBlack.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/WindowStyle.xaml"/>
                
                <!--数据模板皮肤-->
                <ResourceDictionary Source="/Resources/DataGrid/DataGridColumnTemplate.xaml" />
                <ResourceDictionary Source="/Resources/DataGrid/DataGridStyle.xaml" />
                <!--tip message-->
                <ResourceDictionary Source="/Resources/DataGrid/LabelRes.xaml"></ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>

            <common:SettingConverter x:Key="SettingConv"></common:SettingConverter>

        </ResourceDictionary>
    </Application.Resources>
</Application>
